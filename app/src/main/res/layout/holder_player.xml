<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_holder_height"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginRight="@dimen/small_margin"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civPlayerAvatar"
            android:layout_width="@dimen/player_avatar"
            android:layout_height="@dimen/player_avatar"
            android:layout_marginLeft="@dimen/in_card_horizontal_margin"
            android:layout_marginRight="@dimen/in_card_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wordInject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/in_card_horizontal_margin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/civPlayerAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Player" />

        <EditText
            android:id="@+id/etRename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/in_card_horizontal_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:singleLine="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"
            app:layout_constraintLeft_toRightOf="@id/civPlayerAvatar"
            app:layout_constraintRight_toLeftOf="@id/ib_delPlayer" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_delPlayer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/wordInject"
            app:layout_constraintLeft_toRightOf="@+id/etRename"
            android:layout_marginRight="@dimen/big_margin"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp"
            android:background="@color/Transparent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

