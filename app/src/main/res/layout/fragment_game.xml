<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sergey.shlypa2.ui.fragments.GameFragment">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_drawing"
        android:scaleType="fitXY"
        android:tint="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tvAnsweredLabel"
        android:text="@string/words_answered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/timerLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/big_margin"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tvAnsweredCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/timerLinear"
        app:layout_constraintLeft_toRightOf="@id/tvAnsweredLabel"
        android:layout_marginLeft="@dimen/big_margin"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="10"
        />

    <LinearLayout
        android:id="@+id/timerLinear"
        android:layout_width="90dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/medium_margin"
        android:orientation="horizontal"
        android:background="@drawable/timer_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            app:srcCompat="@drawable/ic_clock_24dp"
            android:tint="@color/darkGrey"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="00:30"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_timer"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/containerGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_word"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>



    <TextView
        android:id="@+id/tvWord"
        android:textSize="@dimen/text_Big"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/btOk"
        android:text="ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_smoll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btReturn"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btReturn"
        android:text="return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_smoll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btOk"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
