<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="4dp">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="@dimen/in_card_horizontal_margin"
        android:layout_marginRight="@dimen/in_card_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ibNextWord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/wordInject"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="@dimen/in_card_horizontal_margin"
        android:layout_marginRight="@dimen/in_card_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ibNextWord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/etWordRename" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="@dimen/text_medium"
        android:layout_height="@dimen/text_medium"
        android:id="@+id/ibNextWord"
        android:layout_marginRight="@dimen/small_margin"
        android:background="@color/Transparent"
        app:srcCompat = "@drawable/ic_autorenew_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/ibDelWord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="@dimen/text_medium"
        android:layout_height="@dimen/text_medium"
        android:id="@+id/ibDelWord"
        android:layout_marginRight="@dimen/big_margin"
        android:background="@color/Transparent"
        app:srcCompat = "@drawable/ic_delete_forever_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>