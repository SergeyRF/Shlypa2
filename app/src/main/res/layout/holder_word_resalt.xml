<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_smoll"
        android:id="@+id/word_out"
        android:layout_margin="4dp"
        />
    <android.support.v7.widget.AppCompatRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/word_true"
        app:layout_constraintRight_toLeftOf="@+id/word_false"
        app:layout_constraintRight_toRightOf="@+id/word_out"
        app:layout_constraintBaseline_toBaselineOf="@+id/word_out"
        />
    <android.support.v7.widget.AppCompatRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/word_false"
        app:layout_constraintRight_toLeftOf="@+id/word_nothing"
        app:layout_constraintBaseline_toBaselineOf="@+id/word_out"/>
    <android.support.v7.widget.AppCompatRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/word_nothing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/word_out"/>
</android.support.constraint.ConstraintLayout>