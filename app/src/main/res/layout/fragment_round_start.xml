<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sergey.shlypa2.ui.fragments.RoundStartFragment">

    <TextView
        android:id="@+id/tvRoundName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/civRulesAvatar"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_big"
        tools:text="First round"
        app:layout_constraintVertical_chainStyle="packed"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civRulesAvatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="@color/LightGray"
        app:civ_border_width="2dp"
        app:layout_goneMarginTop="@dimen/medium_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoundName"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintWidth_percent="0.50"
        />

    <TextView
        android:id="@+id/tvRoundRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civRulesAvatar"/>

    <Button
        android:id="@+id/btBeginRound"
        style="@style/btNextStyle"
        android:text="@string/play"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
