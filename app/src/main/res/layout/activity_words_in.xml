<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergey.shlypa2.ui.WordsInActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tvWelcome"
    android:textSize="@dimen/text_medium"
    android:text="@string/WordsIn"
    android:textColor="@color/primary_text"
    android:gravity="center"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wordInject"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etWord"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@+id/wordInject"
        android:hint="@string/vvodi"
        />
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ibAddWord"
        app:layout_constraintTop_toBottomOf="@+id/wordInject"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etWord"
        android:id="@+id/rvWords"
        app:layout_constraintBottom_toTopOf="@+id/btNext"
        />
    <Button
        style="@style/Button_next"
        android:id="@+id/btNext"
        android:text="@string/play"
        android:textSize="@dimen/text_smoll"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btBeginGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btNext"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btRandomWord"
        style="@style/Button_next"
        android:text="@string/setNeedWord"
        android:textSize="@dimen/text_smoll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
