<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergey.shlypa2.CommandActivity">

    <TextView
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stateCommands"
        android:textSize="40dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/comadN"
        app:layout_constraintTop_toBottomOf="parent"/>


    <Button
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusCommand"
        app:layout_constraintTop_toBottomOf="@+id/stateCommands"
        app:layout_constraintRight_toLeftOf="@+id/commands"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/commands"
        app:layout_constraintRight_toLeftOf="@id/minusCommand"
        app:layout_constraintLeft_toRightOf="@+id/plusCommand"
        app:layout_constraintTop_toBottomOf="@+id/stateCommands"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusCommand"
        android:textSize="20dp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@id/commands"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateCommands"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/minusCommand"
        android:text="@string/play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
