<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sergey.shlypa2">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PlayersActivity"
            android:label="@string/player_actyvity"/>

        <activity android:name=".ui.GameSettingsActivity"
            android:label="@string/state_actyvity"/>
        <activity android:name=".ui.TeemActivity"
            android:label="@string/teem_actyvity"/>
        <activity android:name=".ui.WordsInActivity"
            android:label="@string/word_actyvity"/>
        <activity android:name=".ui.RoundActivity"
            android:label="@string/start_actyvity"></activity>
        <activity android:name=".ui.GameResultActivity" />
    </application>

</manifest>